#!/bin/sh
set -e

die() {
    echo >&2 "ERROR: $*"
    exit 1
}

B=""
GEN=""
DST=""
PORT=""
while [ $# -gt 1 ]; do
    case "$1" in
        --dir)
            B="$2"
            shift
            ;;
        --sstate-gen)
            GEN="$2"
            shift
            ;;
        --rsync-to)
            DST="$2"
            shift
            ;;
        --ssh-port)
            PORT="$2"
            shift
            ;;
        --)
            shift
            break
            ;;
        -*)
            die "unknown flag '$1'"
            ;;
        *)
            break
            ;;
    esac
    shift
done

[ -n "$B" ] || die "missing --dir"
[ -n "$GEN" ] || die "missing --sstate-gen"
[ -n "$DST" ] || die "missing --rsync-to"

if [ -n "$PORT" ]; then
    export RSYNC_RSH="ssh -p '$PORT'"
fi

SSTATE=~/sstate-cache-"${GEN}"

case "$GEN" in
    *+*)
        BASEGEN=${GEN%+*}
        BASESSTATE=~/sstate-cache-"$BASEGEN"
        SSTATES="$BASESSTATE $SSTATE"
        ;;
    *)
        SSTATES="$SSTATE"
        ;;
esac


rsync -aH --info=stats2 \
      $SSTATES \
      "$DST"
